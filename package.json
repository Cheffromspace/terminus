{
  "name": "terminus-blog-engine",
  "version": "0.1.3",
  "description": "A hyper-fast, GPU-accelerated blog engine with Vim-like navigation and zero-compromise accessibility",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chefFromSpace/terminus.git"
  },
  "keywords": [
    "blog",
    "webgl",
    "webgpu",
    "vim",
    "accessibility",
    "performance",
    "nextjs",
    "react",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:lib": "tsc --project tsconfig.lib.json && npm run copy-css",
    "copy-css": "mkdir -p dist/styles && cp src/styles/*.css dist/styles/",
    "start": "next start",
    "lint": "next lint",
    "migrate-posts": "ts-node scripts/migrate-posts.ts",
    "prepare": "npm run build:lib"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/lang-python": "^6.1.7",
    "@codemirror/language": "^6.10.8",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.2",
    "@replit/codemirror-vim": "^6.2.1",
    "@types/react-window": "^1.8.8",
    "@uiw/react-codemirror": "^4.23.8",
    "mermaid": "^11.4.1",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hotkeys-hook": "^4.6.1",
    "react-markdown": "^9.0.3",
    "react-window": "^1.8.11",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/hast": "^3.0.4",
    "postcss-modules": "^6.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-import-resolver-typescript": "^3.8.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdown": "^5.1.0",
    "gray-matter": "^4.0.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
